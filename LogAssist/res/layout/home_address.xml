<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/HomeView"
     >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homeAddress"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Let&apos;s start with your Home Address"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/homeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TripDesc"
        android:layout_alignRight="@+id/TripDesc"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPostalAddress" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TripDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Some other places of leisure...."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/la1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TripDesc"
        android:layout_alignRight="@+id/TripDesc"
        android:layout_below="@+id/TripDesc"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/la2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/la1"
        android:layout_alignRight="@+id/la1"
        android:layout_below="@+id/la1"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/la3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/la2"
        android:layout_alignRight="@+id/la2"
        android:layout_below="@+id/la2"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/la4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/la3"
        android:layout_alignRight="@+id/la3"
        android:layout_below="@+id/la3"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/la5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/la4"
        android:layout_alignRight="@+id/la4"
        android:layout_below="@+id/la4"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

</RelativeLayout>